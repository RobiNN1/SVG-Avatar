{
  "name": "robinn/svg-avatar",
  "description": "Create a unique avatar for each user based on their name.",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "avatar",
    "svg",
    "generator"
  ],
  "authors": [
    {
      "name": "Róbert Kelčák",
      "email": "robo@kelcak.com",
      "homepage": "https://kelcak.com"
    }
  ],
  "support": {
    "issues": "https://github.com/RobiNN1/SVG-Avatar/issues",
    "source": "https://github.com/RobiNN1/SVG-Avatar"
  },
  "require": {
    "php": ">=8.2",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^11.4"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "RobiNN\\SVGAvatar\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "RobiNN\\SVGAvatar\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "phpstan --ansi",
    "test": "phpunit --colors=always"
  }
}
